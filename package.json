{
  "name": "reclaimspace",
  "version": "0.1.4",
  "description": "A CLI tool to reclaim disk space by finding and removing unnecessary development folders and files.",
  "main": "src/main.js",
  "type": "module",
  "bin": {
    "reclaimspace": "bin/reclaimspace.js"
  },
  "scripts": {
    "test": "jest",
    "lint": "biome lint . --write",
    "format": "biome format . --write",
    "prepare": "husky"
  },
  "keywords": [
    "cli",
    "cleaner",
    "node_modules",
    "disk-space",
    "reclaim",
    "purge",
    "build-cleaner"
  ],
  "author": "gaureshpai",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/gaureshpai/reclaimspace.git"
  },
  "homepage": "https://gaureshpai.github.io/reclaimspace/",
  "bugs": {
    "url": "https://github.com/gaureshpai/reclaimspace/issues"
  },
  "files": [
    "bin/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/preset-env": "^7.28.3",
    "@biomejs/biome": "^2.3.13",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "commander": "^12.1.0",
    "fast-folder-size": "^2.4.0",
    "husky": "^9.1.7",
    "inquirer": "^8.2.4",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "minimatch": "^10.0.3",
    "ora": "^5.4.1",
    "rimraf": "^6.1.0"
  },
  "lint-staged": {
    "*.js": [
      "biome lint . --write"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.js"
    ]
  }
}